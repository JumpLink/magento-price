.well
	ul.nav.nav-pills.nav-stacked
		li
			.input-group
				input.form-control(type="text", ng-model="sku", placeholder="SKU or Name")
				.input-group-btn
					button.btn.btn-default(type="button", ng-click="resetProductList()")
						i.icon-refresh
					button.btn.btn-default(type="button", ng-click="resetSearchInput()")
						i.icon-trash
		li(ng-repeat="product in products | filter:sku | limitTo:100")
			a(ng-click="load_product({{ product.product_id }}, 'shop_de')", href="", title='"{{ product.sku }}" - {{ product.name }}')
				| {{ product.name }}